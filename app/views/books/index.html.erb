<div class='container'>
  <%= render 'layouts/error_messages', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
<%= render 'users/info', user: current_user %>
<%= render 'form', book: @book %>
</div>
  <div class='col-md-8 offset-md-1'>
  <h1>Books</h1>
  
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
        <% end %>
  </tbody>
</table>
</div>
</div>
