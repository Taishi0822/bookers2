<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<div>
  <div>
    <label>Title</label>
  <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label>
  <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
  <div>
    <%= link_to "Show", book_path(@book) %> | 
    <%= link_to "Back", books_path %>
  </div>
</div>

<% end %>
